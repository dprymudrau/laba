<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "org/apache/ibatis/builder/xml/mybatis-3-mapper.dtd">
<mapper namespace = "com.solvd.deliveryProject.dao.interfaces.IOrdersDAO">
    <select id="getById" parameterType ="int" resultMap="ResultMap">
        SELECT  r.driverId as drivers_driverId,
        d.driverName as drivers_driverName
        FROM Drivers d
        WHERE o.driverId = #{id};
    </select>
    <resultMap id="DriversResultMap" type="com.solvd.laba.pojo.Drivers">
        <id column="drivers_driverId" property="driverId"/>
        <result column="drivers_driverName" property="driverName"/>

    </resultMap>
</mapper>