<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "org/apache/ibatis/builder/xml/mybatis-3-mapper.dtd">
<mapper namespace = "com.solvd.laba.dao.interfaces.CarDao">
    <select id="getById" parameterType ="int" resultMap="carResultMap">
        SELECT  c.carId as car_carId,
        c.carName as car_carName,
        c.numberOfTheCar as car_numberOfTheCar
        g.carTypeId as carType_carTypeId
        FROM Car c
        LEFT JOIN CarType f ON g.carTypeId = c.carId
        WHERE c.carId = #{id};
    </select>
    <resultMap id="CarsResultMap" type="com.solvd.laba.binary.Car">
        <id column="car_carId" property="carId"/>
        <result column="car_carName" property="carName"/>
        <result column="car_numberOfTheCar" property="numberOfTheCar"/>
        <result column="carType_carTypeId" property="carTypeId"/>
    </resultMap>
</mapper>