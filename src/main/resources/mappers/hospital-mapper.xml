<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "org/apache/ibatis/builder/xml/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.laba.dao.interfaces.IHospitalDAO">
    <select id="getAll" resultMap="hospitalResultMap">
        SELECT * FROM Hospitals
    </select>
    <select id="getAllWithFilter" parameterType="String" resultMap="hospitalResultMap">
        SELECT * FROM Hospitals WHERE #{condition}
    </select>
    <select id="getById" parameterType="int" resultMap="hospitalResultMap">
        SELECT * FROM Hospitals WHERE idHospital = #{id}
    </select>
    <insert id="insertToTable" parameterType="com.solvd.laba.binary.Hospital">
        INSERT INTO Hospitals(idHospital, hospitalName, hospitalAddress, idCarFleet) VALUES (#{id}, #{name}, #{address}, #{idCarFleet})
    </insert>
    <update id="updateEntityRow">
        UPDATE Hospitals SET hospitalName = #{name}, hospitalAddress = #{address}, idCarFleet = #{idCarFleet} WHERE idHospital = #{id}
    </update>
    <delete id="deleteById" parameterType="int">
        DELETE FROM Hospitals WHERE idHospital = #{id}
    </delete>
    <resultMap id="hospitalResultMap" type="com.solvd.laba.binary.Hospital" autoMapping="false">
        <id column="idHospital" property="id"/>
        <result column="hospitalName" property="name"/>
        <result column="hospitalAddress" property="address"/>
        <result column="idCarFleet" property="idCarFleet"/>
    </resultMap>
</mapper>