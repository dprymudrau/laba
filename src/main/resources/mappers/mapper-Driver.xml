<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "org/apache/ibatis/builder/xml/mybatis-3-mapper.dtd">
<mapper namespace = "com.solvd.laba.dao.interfaces.DriverDAO">
    <select id="getById" parameterType ="int" resultMap="ResultMap">
        SELECT  d.driverId as driver_driverId,
        d.name as driver_name
        d.phoneNumber as driver_phoneNumber
        FROM Driver d
        WHERE o.driverId = #{id};
    </select>
    <resultMap id="DriversResultMap" type="com.solvd.laba.binary.Driver">
        <id column="driver_driverId" property="driverId"/>
        <result column="driver_name" property="name"/>
        <result column="driver_phoneNumber" property="phoneNumber"/>
    </resultMap>
</mapper>