<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "org/apache/ibatis/builder/xml/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.laba.dao.interfaces.ICarFleetDAO">
    <select id="getAll" resultMap="carFleetResultMap">
        SELECT * FROM CarFleets
    </select>
    <select id="getById" parameterType="int" resultMap="carFleetResultMap">
        SELECT * FROM CarFleets WHERE idCarFleet = #{id}
    </select>
    <insert id="insertToTable"  parameterType="com.solvd.laba.binary.CarFleet">
        INSERT INTO CarFleets(idCarFleet, capacityByCars) VALUES (#{id}, #{capacityByCars})
    </insert>
    <update id="updateEntityRow">
        UPDATE CarFleets SET capacityByCars = #{capacityByCars} WHERE idCarFleet = #{id}
    </update>
    <delete id="deleteById" parameterType="int">
        DELETE FROM CarFleets WHERE idCarFleet = #{id}
    </delete>
    <resultMap id="carFleetResultMap" type="com.solvd.laba.binary.CarFleet" autoMapping="false">
        <id column="idCarFleet" property="id"/>
        <result column="capacityByCars" property="capacityByCars"/>
    </resultMap>
</mapper>